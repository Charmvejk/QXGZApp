<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/merge_sales"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_table_title_0"
        style="@style/TextView_Table_Right"
        android:text="列标题0" />

    <org.angmarch.views.NiceSpinner
        android:id="@+id/nice_spinner_zydl"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:maxLength="4"
        android:text="资源大类"
        android:textSize="11sp"
        android:visibility="gone"

        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_table_title_1"
        style="@style/TextView_Table_Right"

        android:text="列标题1" />

    <org.angmarch.views.NiceSpinner
        android:id="@+id/nice_spinner_zyxl"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:maxLength="4"
        android:text="资源小类"
        android:textSize="11sp"
        android:visibility="gone"

        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_table_title_2"
        style="@style/TextView_Table_Right"
        android:text="列标题2" />

    <TextView
        android:id="@+id/tv_table_title_3"
        style="@style/TextView_Table_Right"
