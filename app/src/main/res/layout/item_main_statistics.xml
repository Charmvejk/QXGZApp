<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_content"
        android:layout_width="180dp"
        android:layout_height="100dp"

        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"

        android:stateListAnimator="@drawable/selector_elevation"
        android:visibility="visible"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        tools:targetApi="lollipop">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.example.holographicplatformapp.utils.MyTextView
                android:id="@+id/tv_hj_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="汇聚总量"
                android:textColor="@color/white"></com.example.holographicplatformapp.utils.MyTextView>

            <com.example.holographicplatformapp.utils.MyTextView
                android:id="@+id/tv_hj_count"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="27000000"
                android:textColor="@color/white"></com.example.holographicplatformapp.utils.MyTextView>


        </LinearLayout>

        <ImageView
            android:id="@+id/iv_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_sjx"></ImageView>

    </androidx.cardview.widget.CardView>


</LinearLayout>